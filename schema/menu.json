{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "format": "uri"
    },
    "workspace": {
      "type": "string"
    },
    "elements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "component": {
            "type": "string",
            "enum": ["link", "spacer"]
          },
          "text": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["href", "menu-item"]
          },
          "href": {
            "type": "string"
          },
          "layout": {
            "type": "string"
          },
          "disabled": {
            "type": "boolean"
          },
          "elements": {
            "type": "array",
            "items": {
              "$ref": "#/properties/elements/items"
            }
          },
          "permission": {
            "type": "string"
          },
          "badge": {
            "type": "object",
            "properties": {
              "component": {
                "type": "string",
                "enum": ["counter"]
              },
              "value": {
                "type": "integer"
              },
              "class": {
                "type": "string"
              }
            },
            "required": ["component", "value"]
          }
        },
        "required": ["component", "permission"],
        "additionalProperties": false
      }
    }
  },
  "required": ["schema", "workspace", "elements"],
  "additionalProperties": false
}